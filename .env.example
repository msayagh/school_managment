# Environment variables for School Management System
# Copy this file to .env and update the values

# Database Configuration
POSTGRES_USER=school_admin
POSTGRES_PASSWORD=changeme
POSTGRES_DB=school_management
DATABASE_URL=postgresql://school_admin:changeme@database:5432/school_management

# Service Ports
API_GATEWAY_PORT=8000
STUDENTS_SERVICE_PORT=3001
TEACHERS_SERVICE_PORT=3002
ACTIVITIES_SERVICE_PORT=3003
ROOMS_SERVICE_PORT=3004
BOOKINGS_SERVICE_PORT=3005
UI_SERVICE_PORT=3000

# Service URLs (for API Gateway)
STUDENTS_SERVICE_URL=http://students-service:3001
TEACHERS_SERVICE_URL=http://teachers-service:3002
ACTIVITIES_SERVICE_URL=http://activities-service:3003
ROOMS_SERVICE_URL=http://rooms-service:3004
BOOKINGS_SERVICE_URL=http://bookings-service:3005

# API Gateway URL (for UI)
REACT_APP_API_URL=http://localhost:8000

# Authentication (to be configured)
JWT_SECRET=your-secret-key-here
JWT_EXPIRY=24h

# Environment
NODE_ENV=development
