# Environment variables for School Management System
# Copy this file to .env and update the values

# Database Configuration
# SECURITY WARNING: Change these passwords in production!
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_PASSWORD=changeme
MYSQL_DATABASE=school_management
MYSQL_USER=school_admin
DB_HOST=database
DB_PORT=3306
DB_USER=school_admin
DB_PASSWORD=changeme
DB_NAME=school_management

# Service Ports
API_GATEWAY_PORT=8000
STUDENTS_SERVICE_PORT=3001
TEACHERS_SERVICE_PORT=3002
ACTIVITIES_SERVICE_PORT=3003
ROOMS_SERVICE_PORT=3004
BOOKINGS_SERVICE_PORT=3005
UI_SERVICE_PORT=3000

# Service URLs (for API Gateway)
STUDENTS_SERVICE_URL=http://students-service:3001
TEACHERS_SERVICE_URL=http://teachers-service:3002
ACTIVITIES_SERVICE_URL=http://activities-service:3003
ROOMS_SERVICE_URL=http://rooms-service:3004
BOOKINGS_SERVICE_URL=http://bookings-service:3005

# API Gateway URL (for UI)
REACT_APP_API_URL=http://localhost:8000

# Authentication (REQUIRED for production)
# Generate a strong secret key for production: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRY=24h

# SECURITY WARNING: Always set JWT_SECRET in production!
# The application will fail to start in production without it.

# Environment
NODE_ENV=development
